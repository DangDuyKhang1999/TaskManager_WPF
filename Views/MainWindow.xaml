<Window x:Class="TaskManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:screens="clr-namespace:TaskManager.Views.Screens"
        xmlns:vm="clr-namespace:TaskManager.ViewModels"
        Title="Task Manager" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Task">
                <screens:TaskTab />
            </TabItem>
            <TabItem Header="New Task">
                <screens:NewTaskTab />
            </TabItem>
            <TabItem Header="New User" x:Name="NewUserTab" Visibility="Collapsed">
                <screens:NewUserTab />
            </TabItem>
            <TabItem Header="Setting">
                <screens:SettingTab />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
