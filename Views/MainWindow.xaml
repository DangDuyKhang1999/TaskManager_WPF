<Window x:Class="TaskManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:screens="clr-namespace:TaskManager.Views.Screens"
        MinHeight="800" MinWidth="900" 
        Title="Task Manager" Height="800" Width="900">

    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Task">
                <screens:TaskScreen />
            </TabItem>
            <TabItem Header="New Task">
                <screens:NewTaskScreen />
            </TabItem>
            <TabItem Header="New User" x:Name="NewUserTab" Visibility="Collapsed">
                <screens:NewUserScreen />
            </TabItem>
            <TabItem Header="Setting">
                <screens:SettingScreen />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
