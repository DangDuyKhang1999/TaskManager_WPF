<UserControl x:Class="TaskManager.Views.Screens.TaskScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TaskManager.ViewModels"
             xmlns:Contexts="clr-namespace:TaskManager.Contexts"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:TaskScreenViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Tasks}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All">
            <DataGrid.Columns>
                <!-- Task Code -->
                <DataGridTextColumn Header="Task Code" Binding="{Binding Code}" Width="*" IsReadOnly="True"/>

                <!-- Task Name -->
                <DataGridTextColumn Header="Task Name" Binding="{Binding Title}" Width="*"/>

                <!-- Description -->
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>

                <!-- Reporter -->
                <DataGridTemplateColumn Header="Reporter" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ReporterDisplayName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.AvailableReporters, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      SelectedItem="{Binding ReporterDisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Assignee -->
                <DataGridTemplateColumn Header="Assignee" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AssigneeDisplayName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.AvailableAssignees, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      SelectedItem="{Binding AssigneeDisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Status -->
                <DataGridTextColumn Header="Status" Binding="{Binding StatusString}" Width="*"/>

                <!-- Due Date -->
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat={}{0:yyyy-MM-dd}}" Width="*" />

                <!-- Priority -->
                <DataGridTextColumn Header="Priority" Binding="{Binding PriorityString}" Width="*" />

                <!-- Created Date -->
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="*" />

                <!-- Updated Date -->
                <DataGridTextColumn Header="Updated Date" Binding="{Binding UpdatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="*" />

                <!-- Delete Column -->
                <DataGridTemplateColumn Header="Delete"
                                         Visibility="{Binding Source={x:Static Contexts:UserSession.Instance}, Path=IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
