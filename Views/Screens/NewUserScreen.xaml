<UserControl x:Class="TaskManager.Views.Screens.NewUserScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TaskManager.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <!-- Validation Template -->
    <UserControl.Resources>
        <ControlTemplate x:Key="ValidationErrorTemplate">
            <Grid VerticalAlignment="Center" SnapsToDevicePixels="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        BorderBrush="Red"
                        BorderThickness="1"
                        Padding="0"
                        SnapsToDevicePixels="True">
                    <AdornedElementPlaceholder
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="-1,-1,-1,-1"/>
                </Border>

                <TextBlock Grid.Column="1"
                           Foreground="Red"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Text="{Binding [0].ErrorContent}"
                           Margin="5,0,0,0"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>

    <!-- ViewModel -->
    <UserControl.DataContext>
        <vm:NewUserViewModel />
    </UserControl.DataContext>

    <!-- Main Layout -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Create New User" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch">

            <!-- Employee Code -->
            <TextBlock Text="Employee Code:"/>
            <TextBox Text="{Binding EmployeeCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}" />

            <!-- Username -->
            <TextBlock Text="Username:"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}" />

            <!-- Password -->
            <TextBlock Text="Password:"/>
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
         Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}" />

            <!-- Display Name -->
            <TextBlock Text="Display Name:"/>
            <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Email -->
            <TextBlock Text="Email:"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Is Admin -->
            <CheckBox Content="Is Admin" IsChecked="{Binding IsAdmin}" Margin="0 10 0 0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Save" Width="100" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="Clear" Width="100" Margin="5" Command="{Binding ClearCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
